---
import skillData from "./Data/Skills.json";
---

<section class="pt-10" id="skills">
  <div
    class="relative flex flex-col items-center max-w-screen-sm px-4 mx-auto sm:px-6 p-8 md:py-[60px]"
  >
    <h2 class="text-black text-4xl font-normal sm:text-4xl md:text-5xl">
      Mis
      <span class="font-extrabold text-[#5b60f4]">Habilidades</span>
    </h2>
  </div>

  <div
    class="self-stretch overflow-hidden flex flex-col py-0 md:pb-20 px-8 gap-[20px]"
  >
    <div
      class="self-stretch grid grid-cols-2 md:flex md:flex-row md:flex-wrap justify-items-center md:items-center md:justify-center py-5 box-border gap-[10px] md:gap-[71px] min-h-[492px] text-center text-xl"
    >
      {
        skillData.map(({ skill, src }) => (
          <div class="h-[145px] w-[145px] md:h-[186px] md:w-[186px] rounded bg-primary-white box-border border-[#5b60f4] flex flex-col items-center justify-center py-6 px-[22px] gap-[32px] border-[2px] border-solid border-primary-black shadow-2xl shadow-zinc-600">
            <img
              class="w-14 h-14 md:w-14 md:h-14 relative overflow-hidden shrink-0"
              loading="eager"
              alt={skill}
              src={src}
            />
            <b class="self-stretch relative text-sm md:text-lg">{skill}</b>
          </div>
        ))
      }
    </div>
  </div>
</section>
