---
import "../styles/global.css";
import { AstroFont } from "astro-font";
import ViewTransitions from "astro/components/ViewTransitions.astro";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content="Erick Lasluisa" />
    <meta name="description" content="Portafolio Erick Lasluisa" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/logo-1.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Erick Lasluisa | Web Developer</title>
    <AstroFont
      config={[
        {
          src: [],
          name: "Sora",
          preload: false,
          display: "swap",
          fallback: "sans-serif",
          cssVariable: "font-sora",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Sora:wght@100;200;300;400;500;600;700;800",
        },
      ]}
    />
    <ViewTransitions />
  </head>
  <body class="bg-white font-Sora">
    <slot />
  </body>
</html>
